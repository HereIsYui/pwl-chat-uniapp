	"tabBar": {
		"selectedColor": "#000",
		"blurEffect": "extralight",
		"color": "#999999",
		"spacing": "5px",
		"list": [{
			"pagePath": "pages/tabbar/chatList/chatList",
			"iconPath": "static/icon/chat.png",
			"selectedIconPath": "static/icon/chat.png",
			"text": "聊天"
		}, {
			"pagePath": "pages/tabbar/bbs/bbs",
			"iconPath": "static/icon/bbs.png",
			"selectedIconPath": "static/icon/bbs.png",
