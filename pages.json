{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "摸鱼派"
			}
		},
		{
			"path": "pages/chat/chat",
			"style": {
				"navigationBarTitleText": "摸鱼派-聊天室",
				"enablePullDownRefresh": true,
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"type": "menu",
							"float": "right"
						}]
					}
				}
			}
		},
		{
			"path": "pages/chat/redpacket",
			"style": {
				"navigationBarTitleText": "发红包"
			}
		},
		{
			"path": "pages/chat/userInfo",
			"style": {
				"navigationBarTitleText": "详情"
			}
		}, {
			"path": "pages/chat/setting",
			"style": {
				"navigationBarTitleText": "设置"
			}

		},
		{
			"path": "uni_modules/uni-upgrade-center-app/pages/upgrade-popup",
			"style": {
				"disableScroll": true,
				"app-plus": {
					"backgroundColorTop": "transparent",
					"background": "transparent",
					"titleNView": false,
					"scrollIndicator": false,
					"popGesture": "none",
					"animationType": "fade-in",
					"animationDuration": 200

				}
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "摸鱼派",
		"navigationBarBackgroundColor": "#3b3e43",
		"backgroundColor": "#3b3e43",
		"onReachBottomDistance": 200
	},
	"app-plus": {
		"softinputNavBar": "none"
	},
	"condition": { //模式配置，仅开发期间生效
		"current": 0, //当前激活的模式(list 的索引项)
		"list": [{
			"name": "登录", //模式名称
			"path": "pages/index/index", //启动页面，必选
			"query": "" //启动参数，在页面的onLoad函数里面得到
		}]
	}
