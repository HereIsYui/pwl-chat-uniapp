			"path": "pages/tabbar/bbs/bbs",
			"style": {
				"navigationBarTitleText": "社区",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/tabbar/find/find",
			"style": {
				"navigationBarTitleText": "清风明月",
				"enablePullDownRefresh": false,
