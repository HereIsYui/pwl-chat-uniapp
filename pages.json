			"style": {
				"navigationBarTitleText": "摸鱼派"
			}
		},
		{
			"path": "pages/chat/chat",
			"style": {
				"navigationBarTitleText": "摸鱼派-聊天室",
				"enablePullDownRefresh": true,
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"type": "menu",
							"float": "right"
						}]
					}
				}
			}
